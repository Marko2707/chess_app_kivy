<CameraScreen>:
    orientation: 'vertical'
    size: root.width, root.height

    GridLayout:
        rows: 2

        Button:
            text: 'opencv'
            size_hint: None, None
            size: 300, 150
            pos_hint: {'x': 0.5, 'y': 0.95}
            on_release: 
                #print("opencv")
                root.manager.current = "cv2preprocessed_screen"
                #root.testOpencv()

        Button:
            text: "Capture"
            size_hint: None, None
            size: 300, 150
            pos_hint: {"center_x": 0.5, "y": 0.05}
            on_press: root.capture(self)

        RelativeLayout:
            size_hint: 1, 1

            AndroidCamera:
                index: 0
                id: camera
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                resolution: self.camera_resolution
                allow_stretch: False
                keep_ratio: True
                play: False
                canvas.before:
                    PushMatrix
                    Rotate:
                        angle: -90
                        origin: self.center
                    Scale:
                        x: self.cam_ratio
                        y: self.cam_ratio
                        origin: self.center
                canvas.after:
                    PopMatrix

        