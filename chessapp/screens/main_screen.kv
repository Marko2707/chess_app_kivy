<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10
        canvas.before:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            source: "chessapp/assets/king.png"
            size_hint: None, None
            size: 500, 500
            pos_hint: {"center_x": 0.5}

        Label:
            text: "AI Chessboard Detection"
            font_size: "28sp"
            bold: True
            color: 1, 1, 1, 1
            halign: "center"

        Image:
            source: "chessapp/assets/queen.png"
            size_hint: None, None
            size: 500, 500
            pos_hint: {"center_x": 0.5}

        Button:
            text: "Start Camera"
            font_size: "20sp"
            size_hint_y: None
            height: 250
            background_color: 0.6, 0.4, 0.2, 1
            on_press:
                print("Camera Button pressed")
                root.manager.current = "camera_screen"

        Button:
            text: "Manual Approach"
            font_size: "20sp"
            size_hint_y: None
            height: 250
            background_color: 0.6, 0.4, 0.2, 1
            on_press:
                print("Initialized Manual Corner Based Approach")
                root.manager.current = "imagecrop_screen"

        Button:
            text: "TestBrowser"
            font_size: "20sp"
            size_hint_y: None
            height: 250
            background_color: 0.5, 0.3, 0.1, 1
            on_press: 
                # app.stop()
                root.openWebsite('https://lichess.org/editor/rnbqkbnr/pppp1ppp/8/4p3/4P3/8/PPPP1PPP/RNBQKBNR_w_KQkq_-_0_1?color=white')
